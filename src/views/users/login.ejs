<%- include ("../partials/head") %>  <!-- HEAD -->

  <body>
    <%- include ('../partials/header') %> 
    <main class="main_login">

      <div class="login_container">
        <section class="intro_login">
          <h2>Bienvenido!</h2>
          <br />
          <p>Ingresa a tu cuenta.</p>
          <p>Si no tienes una cuenta, <a href="/users/register">crea una</a>.</p>
        </section>
        <!-- SIGN IN -->
        <section class="sign_in_form" >
          <h3>Log in</h3>
          <div class="errores" id="errores"></div>
          <form action="/users/login" method="POST" id="uFormulario">
            <div class="nombre_usuario_login">
              <label for="username">Nombre de usuario</label>

              <div class="popup"> 
                <span class="popuptext" id="loginPopup1">Completar nombre y apellido</span>
              </div>

              <input class="login_input" type="text" name="username" id="username" 
               <% if(locals.errors){ %>
                value="<%= locals.old && old.username %>"
              <%} %>  />
              <% if(locals.errors && errors.username){%>
                <p style="color:red"><%= errors.username.msg %></p>
              <%} %> 
            </div>
            <div class="password_login">
              <label for="password">Password</label>
              <input class="login_input" type="password" name="password" id="password"  />
              <% if(locals.errors && errors.password){%>
                <p style="color:red"><%= errors.password.msg %></p>
              <%} %> 
            </div>
            <div class="remember_me">
              <input type="checkbox" name="remember">
							<label for="remember">Recordar mi cuenta</label>
            </div>
            <button type="submit">Ingresar</button>
          </form>
        </section>
      </div>
    </main>

    <%- include ('../partials/footer') %>
    <%- include ('../partials/cursor') %> 
    <script src="/js/userLoginValidation.js"></script> 
  </body>
</html>
